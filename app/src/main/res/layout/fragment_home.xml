<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp">

            <ImageView
                android:id="@+id/helpline_call_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/ic_phone"
                android:layout_weight="3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Home"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/info_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:src="@drawable/ic_info" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sos_card"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/pink_bg"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/text_sos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="SOS"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="8dp" />

                            <TextView
                                android:id="@+id/sos_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/montserrat"
                                android:text="In case of emergency, tell your saved emergency contacts about your threat."
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <Space
                            android:layout_width="14dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="3"
                            android:src="@drawable/ic_sos" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/guard_card"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/neon_bg"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/text_guard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Potential \nThreat"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/guard_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Tell your saved emergency contacts about your potential threat in advanced."
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <Space
                            android:layout_width="14dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="3"
                            android:src="@drawable/ic_guard" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>

                <RelativeLayout
                    android:id="@+id/helpline_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_grad_shape"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginHorizontal="24dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_help_center_24" />

                        <Space
                            android:layout_width="14dp"
                            android:layout_height="0dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Helpline Numbers"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"/>

                    </LinearLayout>

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp"/>

                <LinearLayout
                    android:id="@+id/report_police_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/et_shape"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginHorizontal="24dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_report"/>

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Report the police about mishapping (through mail)"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp"/>

                <LinearLayout
                    android:id="@+id/useful_link_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/et_shape"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginHorizontal="24dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_link"/>

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Useful Links and Numbers"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="62dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/call_police_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/montserrat"
        android:text="Call Police"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>